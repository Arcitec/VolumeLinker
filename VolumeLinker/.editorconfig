# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending in every file
[*]
end_of_line = crlf
insert_final_newline = true

# C/C++ files
[*.{h,hpp,c,cpp}]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Manifest files
[*.manifest]
charset = utf-8
trim_trailing_whitespace = true
indent_style = tab
